{
  "name": "@mmit/check",
  "author": "Mike Mitterer",
  "version": "0.2.17",
  "description": "Type-safe way to check values in TS",
  "keywords": [
    "check",
    "validate",
    "verify",
    "typescript"
  ],
  "license": "MIT",
  "type-check": "tsc",
  "main": "./lib/index.js",
  "types": "./lib/types/",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "gen:barrels": "barrelsby --delete -d src/main/",
    "start": "NODE_ENV=development webpack-dev-server --config webpack.web.js --mode development --open",
    "tc": "tsc --noEmit",
    "build": "rm -rf lib && yarn run gen:barrels && rollup -c",
    "build:ts": "tsc --rootDir $(pwd)/src/main --project tsconfig.lib.json --declaration --outDir $(pwd)/lib",
    "build:ts:watch": "tsc --rootDir src/main --declaration --outDir lib --watch",
    "build:types": "tsc --rootDir src/main --declaration --outDir lib --emitDeclarationOnly",
    "build:js": "babel src/main --out-dir lib --extensions \".ts,.tsx\" --source-maps",
    "build:node": "rm -rf bin && NODE_ENV=development webpack --config webpack.node.js --mode development",
    "build:node:prod": "NODE_ENV=production webpack --config webpack.node.js --mode production",
    "build:web": "rm -rf dist && NODE_ENV=development webpack --config webpack.web.js --mode development",
    "build:web:prod": "rm -rf dist && NODE_ENV=production webpack --config webpack.web.js --mode production",
    "deploy": "yarn version --new-version patch && yarn publish --access public --non-interactive",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "test:unit": "jest src/test/unit",
    "test:integration": "jest src/test/integration",
    "doc": "typedoc --out doc",
    "clean": "rm -rf lib dist bin && jest --clearCache",
    "prettier": "onchange './src/**/*.ts'  -- prettier --write {{changed}}"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MikeMitterer/ts-check"
  },
  "dependencies": {
    "@mmit/logging": "^0.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/core-js": "^2.5.0",
    "@types/istanbul-reports": "^3.0.1",
    "@types/jest": "^26.0.23",
    "@types/shelljs": "^0.8.5",
    "@types/ws": "^7.4.5",
    "autoprefixer": "^10.2.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.2",
    "babel-preset-modern-browsers": "^15.0.2",
    "barrelsby": "^2.2.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^5.2.6",
    "file-loader": "^6.2.0",
    "html-beautify-webpack-plugin": "^1.0.5",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "html-webpack-string-replace-plugin": "^1.1.0",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "jest-extended": "^0.11.5",
    "mini-css-extract-plugin": "^1.6.2",
    "onchange": "^7.1.0",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.0",
    "rollup": "^2.52.3",
    "sass-loader": "^12.1.0",
    "semver": "^7.3.5",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "tslint-override": "^1.0.1",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.41.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.0",
    "webpack-livereload-plugin": "^3.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
